@page "/"
@namespace RenewalTML.Pages
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-title" content="TML Renewal - Главная">
    <meta name="description" content="Основной сайт проект TML Renewal, банк мемного мира">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>TML Renewal - Загрузка</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">

    <base href="~/" />

    <!-- CUSTOM SCRIPT'S 

    <abp-script-bundle name="cl_globalbundle_scripts">
        <abp-script src="/scripts/_jsCustomScriptsRepository.js" />
    </abp-script-bundle>
    
    -->

    <!--<script src="_framework/blazor.server.js"></script>-->

    <!--<link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />-->
    <link href="~/fonts/_font_awesome/all.min.css" rel="stylesheet" />
    <link href="~/libs/cropper.js/cropper.min.css" rel="stylesheet" />

    <!-- custom lib's style -->

    <abp-style-bundle name="cl_globalbundle_libs_styles_min" manifest formaction>
        <abp-style src="/libs/autocomplete/autocomplete.css" />
        <abp-style src="/libs/easymde.js/easymde.css" />
    </abp-style-bundle>

    <abp-style-bundle name="cl_globalbundle_styles">
        <abp-style src="/css/main.css" />
        <abp-style src="/css/application.css" />
        <abp-style src="/css/loaders.css" />
        <abp-style src="/css/admin.css" />
        <abp-style src="/css/user.css" />

    </abp-style-bundle>
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="components-reconnect-modal" class="components-reconnect-hide">
        <div>
            <strong style="margin-bottom: 15px; display: block;">Подключение разорвано</strong>
            <p>Подключение с сервером по какой-то причине было разорвано, подождите пока мы перезагрузим страницу. Если данная ошибка показывается постоянно, обратитесь к администрации TML Renewal...</p>
            <p>Вы можете написать администрации об этом баге <a target="_blank" href="https://github.com/DezareD/RenewalTML/issues">тут</a></p>
        </div>
    </div>

    <div id="blazor-error-ui">
        <div>
            <a class="dismiss">🗙</a>
            <strong style="margin-bottom: 15px; display: block;">Упс... Ошибка</strong>
            <p>Сайт выдал ошибку, подробнее вы можете увидеть в консоли, если сейчас проходит тест, в любом случае обратитесь к администрации!</p>
            <p style="margin-top: 10px;">Вы можете написать администрации об этом баге <a target="_blank" href="https://github.com/DezareD/RenewalTML/issues">тут</a></p>

            <p style="margin-top: 20px;">Из-за данной ошибки сайт может не работать, поэтому рекомендуем перезагрузить страницу, нажав на кнопку ниже.</p>
            <a href="" class="reload">Обновить страницу</a>
        </div>
    </div>

    <div class="_cl_application_loader">
        <div class="group">
            <div class="bigSqr">
                <div class="square first"></div>
                <div class="square second"></div>
                <div class="square third"></div>
                <div class="square fourth"></div>
            </div>
        </div>
    </div>

    <div class="_cl_page_loader" style="display: none;">
        <div class="spinner">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
    </div>

    
       <!-- MODULES AND LIB'S -->
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>

    <script src="_content/Blazorise/blazorise.js"></script>
    <script src="_content/Blazorise.Bootstrap/blazorise.bootstrap.js"></script>
    <script src="https://vk.com/js/api/openapi.js" type="text/javascript"></script>

    <!-- CUSTOM BLAZOR LIBRARY -->
    <script src="~/libs/_cl_blazor/__blazor_server.min.js"></script>
</body>
</html>
